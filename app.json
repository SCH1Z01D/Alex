{
  "expo": {
    "name": "Alex - AI Reading Tutor",
    "slug": "alex-reading-tutor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E1B4B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alextutor.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Alex needs microphone access to listen to your reading",
        "NSSpeechRecognitionUsageDescription": "Alex uses speech recognition to understand what you're reading",
        "NSCameraUsageDescription": "Alex uses the camera to take photos of book pages",
        "NSPhotoLibraryUsageDescription": "Alex needs access to select book page images from your library"
      }
    },
    "android": {
      "package": "com.alextutor.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E1B4B"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera"
    ]
  }
}
